################################### GENERAL ####################################
allow_remote_control   yes
copy_on_select         yes
click_interval        -1.0

##################################### FONT #####################################
font_family            MesloLGS NF
bold_font              MesloLGS NF Bold
italic_font            MesloLGS NF Italic
bold_italic_font       MesloLGS NF Bold Italic
font_size              14
use_ligatures          always

# 使用不同的非 ASCII 字体
non_ascii_font         Fira Code
non_ascii_font_size    14
non_ascii_use_ligatures true

#################################### WINDOW ####################################
hide_window_decorations        titlebar-only
window_padding_width           15
background_opacity             0.8
background_blur                64
remember_window_size           yes

##################################### TAB ######################################
tab_bar_edge                top
tab_bar_style               powerline
tab_powerline_style         slanted

################################### KEYBINDINGS ################################
# 保存文件
map cmd+s send_text all \e:w\r
# 打开文件搜索
map cmd+p send_text all :Telescope find_files\r
# 全局文本搜索
map cmd+shift+f send_text all :Telescope live_grep\r
# 切换文件树
map cmd+b send_text all :Neotree toggle\r

# 新建标签
map cmd+t new_tab
# 关闭当前标签
map cmd+w close_tab
# 切换到下一个标签
map cmd+tab next_tab
# 切换到上一个标签
map cmd+shift+tab previous_tab

# 复制和粘贴
map cmd+c copy_to_clipboard
map cmd+v paste_from_clipboard

#################################### CURSOR ####################################
cursor_blink_interval 0

##################################### THEME ####################################
# BEGIN_KITTY_THEME
# Monokai Pro
include current-theme.conf
# END_KITTY_THEME
